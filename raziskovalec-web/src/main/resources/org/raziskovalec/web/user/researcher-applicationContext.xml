<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="researcher" class="org.raziskovalec.web.user.ResearcherBean" scope="view" />
	
	<bean id="researcherAdd" class="org.raziskovalec.web.user.ResearcherAddBackingBean" scope="request">
		<constructor-arg index="0" ref="researcher" />
		<constructor-arg index="1" ref="mailSession" />
	</bean>

</beans>
