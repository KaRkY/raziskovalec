<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xi="http://www.w3.org/2001/XInclude"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
 <converter>
  <converter-for-class>java.util.Locale</converter-for-class>
  <converter-class>org.raziskovalec.web.jsf.converters.LocaleConverter</converter-class>
 </converter>
 <application>
  <system-event-listener>
   <system-event-listener-class>org.raziskovalec.web.jsf.scopes.ViewScopeCallbackRegistrar</system-event-listener-class>
   <system-event-class>javax.faces.event.PostConstructViewMapEvent</system-event-class>
   <source-class>javax.faces.component.UIViewRoot</source-class>
  </system-event-listener>
  <system-event-listener>
   <system-event-listener-class>org.raziskovalec.web.jsf.scopes.ViewScopeCallbackRegistrar</system-event-listener-class>
   <system-event-class>javax.faces.event.PreDestroyViewMapEvent</system-event-class>
   <source-class>javax.faces.component.UIViewRoot</source-class>
  </system-event-listener>
  <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
 </application>
 <validator>
 	<validator-id>lengthValidator</validator-id>
 	<validator-class>org.raziskovalec.web.validation.LengthValidator</validator-class>
 </validator>
 <validator>
 	<validator-id>emailValidator</validator-id>
 	<validator-class>org.raziskovalec.web.validation.EmailValidator</validator-class>
 </validator>
 <validator>
 	<validator-id>phoneNumberValidator</validator-id>
 	<validator-class>org.raziskovalec.web.validation.PhoneNumberValidator</validator-class>
 </validator>
 <validator>
 	<validator-id>urlValidator</validator-id>
 	<validator-class>org.raziskovalec.web.validation.URLValidator</validator-class>
 </validator>
 <validator>
 	<validator-id>requiredValidator</validator-id>
 	<validator-class>org.raziskovalec.web.validation.RequiredValidator</validator-class>
 </validator>
</faces-config>
