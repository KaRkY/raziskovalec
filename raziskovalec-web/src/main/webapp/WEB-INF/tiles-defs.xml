       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>
  <definition name="base" template="templates/template"
    preparer="attributePreparer">
    <put-attribute name="sidebar" value="" />
  </definition>

  <definition name="home" extends="base">
    <put-attribute name="content" value="index" />
    <put-attribute name="titleExpression" value="home" />
  </definition>

  <definition name="group.list" extends="base">
    <put-attribute name="content" value="group/list" />
    <put-attribute name="titleExpression" value="group" />
  </definition>

  <definition name="organization.list" extends="base">
    <put-attribute name="content" value="organization/list" />
    <put-attribute name="titleExpression" value="organization" />
  </definition>

  <definition name="researcher.list" extends="base">
    <put-attribute name="content" value="researcher/list" />
    <put-attribute name="titleExpression" value="researcher" />
  </definition>

  <definition name="login" extends="base">
    <put-attribute name="content" value="login" />
    <put-attribute name="titleExpression" value="login" />
  </definition>
</tiles-definitions>